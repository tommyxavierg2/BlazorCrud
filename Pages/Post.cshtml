@page "/post"
@inject HttpClient Http

<h1> Post </h1>

<h6> Post something </h6>

<div class="form-group">
    <label>Name</label> 
    <input name="name" type="text" bind="@user.Name" class="form-control"/>
</div>   

<div class="form-group">
    <label>Lastname</label> 
    <input name="lastname" type="text" bind="@user.Lastname" class="form-control"/>
</div>   

<button type="button" class="btn btn-primary" onclick="@prin">Print</button>

@functions {
    private User user = new User();

    void prin() {
        Http.SendJsonAsync(HttpMethod.Post, "http://localhost:3000/users", user); 
        user.Name = "";
        user.Lastname = "";   
    }

}